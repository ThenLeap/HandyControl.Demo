<Window x:Class="HandyControl.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="现代化管理系统" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource RegionBrush}">
    
    <hc:SimplePanel>
        <!-- 侧边栏 -->
        <Border Width="220" 
                HorizontalAlignment="Left"
                Background="{DynamicResource SecondaryRegionBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo 区域 -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource PrimaryBrush}"
                        Margin="10">
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center">
                        <TextBlock Text="&#xE81D;" 
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="32"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="管理系统" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- 菜单导航 -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,10,0,0">
                    <hc:SideMenu x:Name="SideMenu" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 SelectionChanged="SideMenu_SelectionChanged">
                        
                        <hc:SideMenuItem Header="仪表盘" 
                                        Tag="Dashboard"
                                        IsSelected="True">
                            <hc:SideMenuItem.Icon>
                                <TextBlock Text="&#xE80F;" 
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="16"/>
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        
                        <hc:SideMenuItem Header="用户管理" 
                                        Tag="Users">
                            <hc:SideMenuItem.Icon>
                                <TextBlock Text="&#xE716;" 
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="16"/>
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        
                        <hc:SideMenuItem Header="数据分析" 
                                        Tag="Analytics">
                            <hc:SideMenuItem.Icon>
                                <TextBlock Text="&#xE9D9;" 
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="16"/>
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        
                        <hc:SideMenuItem Header="报表管理" 
                                        Tag="Reports">
                            <hc:SideMenuItem.Icon>
                                <TextBlock Text="&#xE8A5;" 
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="16"/>
                            </hc:SideMenuItem.Icon>
                        </hc:SideMenuItem>
                        
                        <hc:SideMenuItem Header="系统设置" Tag="Settings">
                            <hc:SideMenuItem.Icon>
                                <TextBlock Text="&#xE713;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16"/>
                            </hc:SideMenuItem.Icon>

                            <hc:SideMenuItem Header="基本设置" Tag="BasicSettings">
                                <hc:SideMenuItem.Icon>
                                    <TextBlock Text="&#xE713;" 
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="14"/>
                                </hc:SideMenuItem.Icon>
                            </hc:SideMenuItem>

                            <hc:SideMenuItem Header="权限管理" Tag="Permissions">
                                <hc:SideMenuItem.Icon>
                                    <TextBlock Text="&#xE72E;" 
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="14"/>
                                </hc:SideMenuItem.Icon>
                            </hc:SideMenuItem>

                            <hc:SideMenuItem Header="日志管理" Tag="Logs">
                                <hc:SideMenuItem.Icon>
                                    <TextBlock Text="&#xE81C;" 
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="14"/>
                                </hc:SideMenuItem.Icon>
                            </hc:SideMenuItem>
                        </hc:SideMenuItem>

                        
                    </hc:SideMenu>
                </ScrollViewer>
                
                <!-- 底部用户信息 -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource SecondaryRegionBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        Padding="15,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Width="40" 
                                Height="40"
                                CornerRadius="20"
                                Background="{DynamicResource PrimaryBrush}">
                            <TextBlock Text="&#xE77B;" 
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="20"
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" 
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center">
                            <TextBlock Text="管理员" 
                                      FontWeight="Bold"
                                      FontSize="14"/>
                            <TextBlock Text="admin@system.com" 
                                      FontSize="11"
                                      Foreground="{DynamicResource ThirdlyTextBrush}"
                                      Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- 主内容区域 -->
        <Grid Margin="220,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部工具栏 -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource RegionBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 搜索框 -->
                    <hc:SearchBar Width="300"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  hc:InfoElement.Placeholder="搜索功能、用户、数据..."
                                  Style="{StaticResource SearchBarPlus}"/>
                    
                    <!-- 右侧工具按钮 -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal"
                               VerticalAlignment="Center">
                        
                        <!-- 主题切换 -->
                        <ToggleButton Width="40" 
                                     Height="40"
                                     Margin="5,0">
                            <TextBlock Text="&#xE793;" 
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="18"/>
                        </ToggleButton>
                        
                        <!-- 通知 -->
                        <Button Width="40" 
                               Height="40"
                               Margin="5,0">
                            <TextBlock Text="&#xEA8F;" 
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="18"/>
                        </Button>
                        
                        <!-- 消息 -->
                        <Button Width="40" 
                               Height="40"
                               Margin="5,0">
                            <TextBlock Text="&#xE8BD;" 
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="18"/>
                        </Button>
                        
                        <!-- 全屏 -->
                        <Button Width="40" 
                               Height="40"
                               Margin="5,0"
                               Click="FullScreen_Click">
                            <TextBlock Text="&#xE740;" 
                                      FontFamily="Segoe MDL2 Assets"
                                      FontSize="18"/>
                        </Button>
                        
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 内容区域 -->
            <hc:TransitioningContentControl Grid.Row="1" 
                                           x:Name="ContentContainer"
                                           Margin="20"
                                           TransitionMode="Fade"/>
        </Grid>
    </hc:SimplePanel>
</Window>